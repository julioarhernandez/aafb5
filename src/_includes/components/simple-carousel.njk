<div class="container">
{% if ctitle %}
<div class="row">
   <div class="{{class}}">
       <div class="content-title mt-2 order-2">
            <h1 class="headerTitle">{{ctitle}}</h1>
        </div>
   </div>
</div>
{% endif %}
  <div class="row">
    <div class="{{class}}">
      <div id="carouselSimpleProduct" class="carousel slide simple-carousel" data-ride="carousel">

        {% set items=slides %}
        <ol class="carousel-indicators">
          {% for item in items %}
          <li data-target="#carouselExampleIndicators" data-slide-to="{{loop.index0}}" {% if loop.first %}
            class="active" {% endif %}></li>
          {% endfor %}
        </ol>
        <div class="carousel-inner">
          {% for item in items %}
          <div class="carousel-item{% if loop.first %} active{% endif %}">
            <div>
              <a href="{{item.src}}" data-lightbox="gallery-prodcuct">
                <picture>
                  <source srcset="{{item.src}}" media="(max-width:500px)">
                  <source srcset="{{item.src}}" media="(min-width:501px)">
                  <img src="{{item.src}}" alt="..." loading="lazy" class="img-resp">
                </picture>
              </a>
            </div>
          </div>
          {% endfor %}
        </div>

        <a class="carousel-control-prev" href="#carouselSimpleProduct" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselSimpleProduct" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
</div>