<section class="contact-section mt-5">
    <div class="container {% if hasForm %} d-flex flex-column{% endif %}">
        {% if showMap %}
        <div class="row{% if hasForm %} order-2 mt-5{% endif %}">
            <div class="col-12 mb-5">
                <a href="{{global.contact.maps}}" target="_blank" rel="noopener">
                    <picture>
                        <source media="(max-width: 500px)"
                            srcset="/assets/images/min/map.jpg">
                        <source media="(min-width: 501px)" 
                            srcset="/assets/images/min/map@2x.jpg">
                        <img src="/assets/images/min/map.jpg" loading="lazy" alt="caption" class="img-resp">
                    </picture>
                </a>

            </div>
        </div>
        {% endif %}

        <div class="row">
            <div class="col-12 text-center d-flex flex-column my-5 ">
                <div class="content-title mt-2 order-2">
                    <h2 class="headerTitle">{{ctitle}}</h2>
                </div>
                <div class="content-subtitle order-1">
                    <p class="headerSubtitle -decor-vert -medium">{{subtitle | safe}}</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-11 col-md-4 mx-auto ml-md-0">
                <div class="card card-reset card-contact text-center m-2">
                    <div class="card-body m-0 p-4 p-md-5">
                        <div class="align-items-center car-title_wrapper d-flex mb-3 justify-content-center">
                            <img src="/assets/images/icons/notification.svg" loading="lazy">
                            <h3 class="-large -phone card-title d-flex headerTitle justify-content-center mb-0 ml-2">Send a Message</h3>     
                        </div>
                        <p class="card-text bodyContent">Let us know what product or service you are interested in</p>
                        <a href="mailto:{{global.contact.email}}" class="card-link btn-link btn-no-underline btn-ellipsis -large">{{global.contact.email}}</a>
                    </div>
                </div>
            </div>
            <div class="col-11 col-md-4 mx-auto ml-md-0">
                <div class="card card-reset card-contact text-center m-2 shadow-lg">
                    <div class="card-body m-0 p-5">
                        <div class="align-items-center car-title_wrapper d-flex mb-3 justify-content-center">
                            <img src="/assets/images/icons/telephone.svg" loading="lazy">
                            <h3 class="-large -phone card-title d-flex headerTitle justify-content-center mb-0 ml-2">Make a call</h3>
                        </div>
                        <p class="card-text bodyContent">If you have any questions, call us and our sales specialist will help you.</p>
                        <a href="tel:{{global.contact.aiphone}}" class="card-link btn-link btn-no-underline -large">{{global.contact.phone}}</a>
                    </div>
                </div>
            
            </div>
            <div class="col-11 col-md-4 mx-auto ml-md-0">
                <div class="card card-reset card-contact text-center m-2">
                    <div class="card-body m-0 p-4 p-md-5">
                        <div class="align-items-center car-title_wrapper d-flex mb-3 justify-content-center">
                            <img src="/assets/images/icons/map.svg" loading="lazy">
                            <h3 class="-large -phone card-title d-flex headerTitle justify-content-center mb-0 ml-2">Headquarters</h3>
                        </div>
                        <p class="card-text bodyContent">Our office is open from 8am to 5pm Monday through Friday</p>
                        <a href="{{global.contact.maps}}" class="card-link btn-link btn-no-underline -large">{{global.contact.address | safe}}</a>
                    </div>
                </div>
            </div>
        </div>
        {% if hasForm %}
        <div class="row order-3">
            <div class="col-12 text-center d-flex flex-column my-5 ">
                <div class="content-title mt-2 order-2">
                    <h2 class="headerTitle">{{formTitle}}</h2>
                </div>
                <div class="content-subtitle order-1">
                    <h3 class="headerSubtitle -decor-vert -medium">{{formSubtitle | safe}}</h3>
                </div>
            </div>
            <div class="col-10 col-md-6 text-center d-flex flex-column mb-5 mx-auto">
                <form action="https://api.staticforms.xyz/submit" method="post">
                    <div class="row">
                        <div class="col-md-6 col-12">
                            <input type="text" name="name" value="" class="form-input" aria-required="true" aria-invalid="false" placeholder="Your name*" required>
                        </div>
                        <div class="col-12 col-md-6 mt-4 mt-md-0">
                            <input type="text" name="email" value="" class="form-input" aria-required="true" aria-invalid="false" placeholder="Your e-mail*" required>
                        </div>
                        <div class="col-12 mt-4">
                            <textarea name="message" cols="40" rows="10" class="form-text" aria-required="true" aria-invalid="false" placeholder="Your message*" required></textarea>
                        </div>
                        <div class="col-12 mt-4">
                            <input type="text" name="honeypot" style="display:none">
                            <input type="hidden" name="accessKey" value="{{ global.contactForm.staticFormKey}}" />
                            <input type="hidden" name="subject" value="{{ global.contactForm.emailSubject}}" />
                            <input type="hidden" name="replyTo" value="{{ global.contactForm.sendEmailto}}" />
                            <input type="hidden" name="redirectTo" value="{{ global.contactForm.successUrl}}" />
                            <input type="submit" value="Submit" class="btn btn-primary btn-no-arrow"/>
                        </div>
                    </div>
                </form>
            </div>
            
        </div>
        {% endif %}

    </div>
</section>