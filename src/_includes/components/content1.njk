<section class="mt-6">
    <div class="container">
        <div class="row">
            <div class="{{class}}">
                <div class="content-grid">
                    <div class="item item-1">
                        <img src="/assets/images/min/10-Pros-and-Cons-of-Metal-Roofing-for-Your-Home-min.jpg" loading="lazy">
                    </div>
                    <div class="item item-2">
                        <img src="/assets/images/min/hurricane-shutters-miami@2x.jpg" loading="lazy">
                    </div>
                    <div class="item item-3">
                        <img src="/assets/images/min/hurricane-windows-from-window-world@2x.jpg" loading="lazy">
                    </div>
                    <div class="item item-4">
                        <img src="/assets/images/min/b_fold-studio-66-288781-rel134ca8ab@2x.jpg" loading="lazy">
                    </div>
                </div>
            </div>
            <div class="{{class}} section-content1 mt-5">
                <div class="content-title mt-2 order-2">
                    <{{titleHtag}} class="headerTitle">{{ctitle}}</{{titleHtag}}>
                </div>
                <div class="content-subtitle order-1">
                    <{{subtitleHtag}} class="headerSubtitle -decor-hoz -medium">{{subtitle}}</{{subtitleHtag}}>
                </div>
                {% if subsubtitle %}
                <div class="content-subsubtitle order-3">
                    <span class="headerSubsubtitle">{{subsubtitle}}</span>
                </div>
                {% endif %}
                <div class="content-body order-3 mt-4">
                    <div class="bodyContent">{{body | safe }}</div>
                        {% include "components/button.njk" %}
                    </div>
                </div>
            </div>
        </div>

</section>